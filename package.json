{
  "name": "ticketgrid",
  "private": true,
  "version": "1.0.0",
  "description": "Discover concerts, workshops, conferences, and community events. Book tickets instantly and manage events seamlessly.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
